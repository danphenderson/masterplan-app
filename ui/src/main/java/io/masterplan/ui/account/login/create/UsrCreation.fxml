<fx:root type="javafx.scene.layout.VBox"  xmlns="http://javafx.com/javafx/15.0.1"
         xmlns:fx="http://javafx.com/fxml/1" >

    <Label layoutX="183.0" layoutY="72.0" text="Create a MasterPlan Account" textAlignment="CENTER">
        <font>
            <Font size="22.0" />
        </font>
    </Label>

     <GridPane layoutX="223.0" layoutY="168.0">

       <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       </columnConstraints>

       <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       </rowConstraints>

        <children>
           <Label text="Username" />
           <Label text="Password" GridPane.rowIndex="1" />
           <Label text="Email address" GridPane.rowIndex="2" />
